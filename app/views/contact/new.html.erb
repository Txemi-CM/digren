<div id="digren">
  <h1>Digital Renaissance</h1>
</div>
<h2>Contact form</h2>

<div class="row">
  <div class="span6 offset3">

    <%= form_for @message, :url => contact_path do |form| %>
      <fieldset class="fields">
        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name %>
        </div>
        
        <div class="field">
          <%= form.label :email %>
          <%= form.text_field :email %>
        </div>
        <div class="field">
          <%= form.label :subject %>
          <%= form.text_field :subject, :class => "span6" %>
        </div>
        
        <div class="field">
          <%= form.label :body %>
          <%= form.text_area :body, :rows => 5, :class => "span6" %>
        </div>
      </fieldset>
      
      <fieldset class="actions">
        <%= form.submit "Send" %>
      </fieldset>
    <% end %>
  </div>
</div>